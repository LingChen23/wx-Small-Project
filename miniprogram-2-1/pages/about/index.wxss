.box {
  /* 弹性布局 可伸缩 水平排列*/
  display: flex;
}

.box view{
  /* 平均分 */
  flex: 1;
  border: 1px solid red;
  box-sizing: border-box;
  text-align: center;
  padding: 10px;
}

.box image{
  width: 100%;
  height: 80px;
}

