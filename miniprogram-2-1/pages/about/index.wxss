.wrap{
  display: flex;
  flex-wrap: wrap;
  background: #e1e1e1;
  padding: 10px 0;
  box-sizing: border-box;
}

.wrap view{
  width: 20%;
  padding: 5px;
  box-sizing: border-box;
  text-align: center;
  color: #999;
  margin-top: 10px;
}

.wrap view image{
  width: 17vw;
  /* 100vw 屏幕 */
  height: 17vw;
  border-radius: 50%;
}

.top{
  position: fixed;  /***固定定位***/
  right: 0;
  bottom: 20px;

  width: 50px;
  height: 50px;
  background: #000;
  color: #e1e1e1;
  font-weight: bold;
  /* text-align: center;
  line-height: 50px; */
  display: flex;
  align-items: center;  /**水平居中**/
  justify-content: center;
}

.f{
  width: 80vw;
  height: 120px;
  background: red;
  border-radius: 15px;
  margin: 10px 20px;
  position: relative;/**相对定位**/
}

.f .son{
  height: 100px;
  width: 100px;
  background: green;
  position: absolute;
  left: -10px;
  top: 10px;
  border-radius: 40px;
/**绝对定位 根据父组件定位**/
}

