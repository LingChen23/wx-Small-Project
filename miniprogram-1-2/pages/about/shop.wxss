}

.wrap view{
  width: 20%;
  padding: 5px;
  box-sizing: border-box;
  text-align: center;
  color: #999;
  margin-top: 10px;
}

.wrap view image{
  width: 17vw;
  /* 100vw 屏幕 */
  height: 17vw;
  border-radius: 50%;
}

.top {
  position: fixed;
  right: 0;
  bottom: 20px;

  width: 50px;
  height: 50px;
  color: #e1e1e1;
  font-weight: bold;
  text-align: center;
  line-height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent; /* 设置背景为透明 */
}

.top-image {
  width: 100%;
  height: 100%;
}


