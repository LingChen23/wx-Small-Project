/***
  父相对子绝对
***/

.wrap_ {
  display: flex;
  justify-content: space-between;
  padding: 10px;
}

.item {
  background-color: #e1e1e1;
  border-radius: 10px;
  padding: 5px;
}

.item:not(:last-child) {
  margin-right: 10px;  /* Add margin to the right of each item, except for the last one */
}

.text-item {
  margin: 0 8px;
  font-size: 18px;
}

.list-item {
  display: flex;
  align-items: flex-start;
  padding: 12px 20px;
  box-sizing: border-box;
  background-color: white; /* 设置列表项的背景色为白色 */
  margin-bottom: 10px; /* 创建列表项间的间隔 */
  border-radius: 10px; /* 创建圆角 */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* 添加阴影 */
}


.list image{
  width: 100px;
  height: 150px;
  vertical-align: top; 
}

.list {
  background-color: #e1e1e1; /* 设置列表的背景色为浅灰色 */
  padding: 10px; /* 创建列表的内边距 */
}

.list-item {
  display: flex;
  align-items: flex-start;
  padding: 12px 20px;
  box-sizing: border-box;
  background-color: white; /* 设置列表项的背景色为白色 */
  margin-bottom: 10px; /* 创建列表项间的间隔 */
  border-radius: 10px; /* 创建圆角 */
}

.img1 {
  width: 100px;
  height: 100px;
  border-radius: 10px;
  object-fit: cover;
  margin-right: 20px;
}

.content {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  overflow: hidden;
  margin-left: 20px; /* 在左侧添加20px的间距 */
}

.content view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.content .name{
  font-size: 24px; /* 设置大字体 */
  color: rgba(10, 10, 10, 0.89); /* 设置字体颜色为深灰色 */
  margin-bottom: 5px; /* 在两行字之间添加间隔 */
  line-height: 1.5; /* 增加行高 */
}


.content .score{
  font-size: 20px; /* 设置大字体 */
  color: rgba(158, 88, 88, 0.89); /* 设置字体颜色为白色 */
  margin-bottom: 5px; /* 在两行字之间添加间隔 */
}

.merchant {
  display: flex; /* 使用Flex布局 */
