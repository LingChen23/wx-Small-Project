.wrap{
  display: flex;
  flex-wrap: wrap;
  background: #e1e1e1;
  padding: 10px 0;
  box-sizing: border-box;
}

.wrap view{
  width: 20%;
  padding: 5px;
  box-sizing: border-box;
  text-align: center;
  color: #999;
  margin-top: 10px;
}

.wrap view image{
  width: 17vw;
  /* 100vw 屏幕 */
  height: 17vw;
  border-radius: 50%;
}

.top{
  position: fixed;  
  right: 0;
  bottom: 20px;

  width: 50px;
  height: 50px;
  background: #000;
  color: #e1e1e1;
  font-weight: bold;
  text-align: center;
  line-height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.f{
  width: 80vw;
  height: 120px;
  background: red;
  border-radius: 15px;
  margin: 10px 20px;
  position: relative;/**相对定位**/
}

.f .son{
  height: 100px;
  width: 100px;
  background: green;
  position: absolute;
  left: -10px;
  top: 10px;
  border-radius: 40px;
/**绝对定位 根据父组件定位**/
}

/***
  父相对子绝对
***/

.wrap_ {
  display: flex;
  justify-content: space-between;
  padding: 10px;
}

.item {
  background-color: #e1e1e1;
  border-radius: 10px;
  padding: 5px;
}

.item:not(:last-child) {
  margin-right: 10px;  /* Add margin to the right of each item, except for the last one */
}

.text-item {
  margin: 0 8px;
  font-size: 18px;
}

.list-item{
  margin-top: 10px;
  padding: 10px;
  border-bottom: 1px solid red;
}

.list image{
  width: 100px;
  height: 150px;
  vertical-align: top; 
}

.list {
  background-color: #e1e1e1; /* 设置列表的背景色为浅灰色 */
  padding: 10px; /* 创建列表的内边距 */
}

.list-item {
  display: flex;
  align-items: flex-start;
  padding: 12px 20px;
  box-sizing: border-box;
  background-color: white; /* 设置列表项的背景色为白色 */
  margin-bottom: 10px; /* 创建列表项间的间隔 */
  border-radius: 10px; /* 创建圆角 */
}

.img1 {
  width: 100px;
  height: 100px;
  border-radius: 10px;
  object-fit: cover;
  margin-right: 20px;
}

.content {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  overflow: hidden;
}

.content view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
